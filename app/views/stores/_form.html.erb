<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :accounts do |account| %>
    <div class="field">
      <%= account.label :username %>
      <%= account.text_field :username %>
    </div>
    <div class="field">
      <%= account.label :password %>
      <%= account.password_field :password %>
    </div>
    <div class="field">
      <%= account.label :password_confirmation %>
      <%= account.password_field :password_confirmation %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
